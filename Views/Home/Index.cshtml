@model  IEnumerable<Aspire.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}
<h3 class="pb-3 mb-3 font-italic border-bottom">
    Featured Posts
</h3>
      <div class="row">
          @foreach (var item in Model.Take(10))
    {
        <div class="col-md-4">
                <div class="card mb-4 border-dark">
                    @*<img class="card-img-top" src="//placeimg.com/290/180/any" alt="Card image cap">*@
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <div class="text-dark"> Type: @Html.DisplayFor(modelItem => item.PostType.Name)</div>
                        <div class="text-dark">Posted On: @Html.DisplayFor(modelItem => item.PostedOn)</div>
                        <p class="card-text text-truncate d-inline-blocks" style="max-width:auto;">@Html.DisplayFor(modelItem => item.Discription)</p>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.PostId" class="btn btn-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>
