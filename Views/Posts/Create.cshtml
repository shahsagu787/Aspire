@model Aspire.Models.Post

@{ ViewData["Title"] = "Create"; }

<h1 class="text-center text-danger">Create New Post</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>



            <div class="form-group mb-2">
                <label asp-for="Discription" class="control-label"></label>
                <textarea asp-for="Discription" class="form-control"></textarea>
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group mb-2">
                        <label asp-for="PostTypeId" class="control-label"></label>
                        <select asp-for="PostTypeId" class="form-control" asp-items="ViewBag.PostTypeId"></select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group mb-2">
                        <label asp-for="PostStatusId" class="control-label"></label>
                        <select asp-for="PostStatusId" class="form-control" asp-items="ViewBag.PostStatusId"></select>
                    </div>
                </div>

            </div>
            <br />
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <input type="reset" class="btn btn-outline-danger" />
            </div>

        </form>
    </div>
</div>
