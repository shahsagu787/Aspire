                        <div class="text-dark">Posted On: @Html.DisplayFor(modelItem => item.PostedOn)</div>
                        <p class="card-text text-truncate d-inline-blocks" style="max-width:auto;">@Html.DisplayFor(modelItem => item.Discription)</p>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.PostId" class="btn btn-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>
